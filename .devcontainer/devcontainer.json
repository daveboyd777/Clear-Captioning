// For schema validation, see: https://containers.dev/implementors/json_reference/
{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devcontainer.json",
  "name": "Clear-Captioning Flutter Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "flutter-dev",
  "workspaceFolder": "/app",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "dart-code.flutter",
        "dart-code.dart-code",
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss",
        "formulahendry.auto-rename-tag",
        "ms-vscode.vscode-typescript-next"
      ],
      "settings": {
        "dart.flutterSdkPath": "/opt/flutter",
        "dart.sdkPath": "/opt/flutter/bin/dart",
        "dart.previewFlutterUiGuides": true,
        "dart.previewFlutterUiGuidesCustomTracking": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": true
        }
      }
    }
  },

  "forwardPorts": [3000, 8080, 9999],
  "postCreateCommand": "flutter doctor && flutter pub get",
  
  "remoteUser": "flutter"
}
